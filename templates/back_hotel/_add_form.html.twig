        {{ form_errors(form.descriptionHotel) }}
    </div>

    <div class="form-group">
        {{ form_label(form.promotionHotel, 'Promotion') }}
        {{ form_widget(form.promotionHotel, {'attr': {'class': 'form-control', 'placeholder': 'Promotion en %'}}) }}
        {{ form_errors(form.promotionHotel) }}
    </div>

