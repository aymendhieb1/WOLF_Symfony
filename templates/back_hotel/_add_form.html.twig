    </div>

    <div class="form-group">
        {{ form_label(form.numTelephoneHotel, 'Téléphone') }}
        {{ form_widget(form.numTelephoneHotel, {'attr': {'class': 'form-control', 'placeholder': 'Numéro de téléphone'}}) }}
        {{ form_errors(form.numTelephoneHotel) }}
    </div>

    <div class="form-group">
