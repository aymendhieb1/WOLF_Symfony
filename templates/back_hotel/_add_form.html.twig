        <div class="custom-file-input-container">
            {{ form_label(form.imageHotel, 'Image') }}
            {{ form_widget(form.imageHotel, {'attr': {'class': 'custom-file-input'}}) }}
            {{ form_errors(form.imageHotel) }}
        </div>
    </div>
