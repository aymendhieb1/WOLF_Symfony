{% extends 'base1.html.twig' %}

{% block body %}
    <div class="main-panel">
        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header" style="background-color: #ff681a;">
                                <h4 class="card-title" style="color: white;">Liste des Hôtels</h4>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table">
                                        <thead class="text-primary">
                                            <tr>
                                                <th>Nom</th>
                                                <th>Localisation</th>
                                                <th>Téléphone</th>
                                                <th>Email</th>
                                                <th>Promotion</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        {% for hotel in hotels %}
                                            <tr>
                                                <td>{{ hotel.nom }}</td>
                                                <td>{{ hotel.localisation }}</td>
                                                <td>{{ hotel.telephone }}</td>
                                                <td>{{ hotel.email }}</td>
                                                <td>{{ hotel.promotion }}%</td>
                                                <td>
                                                    <a href="{{ path('app_back_hotel_show', {'id': hotel.id}) }}" class="btn btn-sm" style="background-color: #ff681a; color: white;">
                                                        <i class="fas fa-eye"></i> Voir
                                                    </a>
                                                    <a href="{{ path('app_back_hotel_edit', {'id': hotel.id}) }}" class="btn btn-sm" style="background-color: #ff681a; color: white;">
                                                        <i class="fas fa-edit"></i> Modifier
                                                    </a>
                                                </td>
                                            </tr>
                                        {% else %}
                                            <tr>
                                                <td colspan="6">Aucun hôtel trouvé</td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 