{% extends 'base1.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css">
    <!-- Material Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- Custom CSS -->
    <style>
        .modal-backdrop.fade.show {
            opacity: 0.5;
        }
        .material-datatables {
            padding: 20px 0;
        }
        .btn-just-icon {
            padding: 8px;
            min-width: auto;
        }
        .post-type-badge {
            font-size: 0.8rem;
            padding: 3px 8px;
            border-radius: 10px;
        }
        .badge-survey {
            background-color: #4CAF50;
            color: white;
        }
        .badge-announcement {
            background-color: #2196F3;
            color: white;
        }
        .badge-comment {
            background-color: #FF9800;
            color: white;
        }
        .badge-post {
            background-color: #9C27B0;
            color: white;
        }
        .post-image-thumbnail {
            max-width: 100px;
            max-height: 100px;
            object-fit: cover;
            border-radius: 4px;
        }
        .image-preview {
            max-width: 150px;
            margin-bottom: 10px;
        }
    </style>
{% endblock %}

{% block body %}

<!-- Edit Post Modal -->
<div class="modal fade" id="editPostModal" tabindex="-1" role="dialog" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered modal-lg" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Edit Post</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<div id="editFormContainer">
					<!-- Form will be loaded here via AJAX -->
				</div>
			</div>
		</div>
	</div>
</div>

<script>
$(document).ready(function() {
	// Handle edit button click
	$('.edit').click(function(e) {
		e.preventDefault();
		const postId = $(this).data('post-id');
		
		// Load the edit form via AJAX
		$.ajax({
			url: `/back/post/edit/${postId}`,
			type: 'GET',
			success: function(response) {
				$('#editFormContainer').html(response);
				$('#editPostModal').modal('show');
				
				// Initialize form validation
				const type = $('#post_type').val();
				handlePostTypeChange(type);
			},
			error: function(xhr, status, error) {
				console.error('Error loading edit form:', error);
			}
		});
	});

	// Handle form submission
	$(document).on('submit', '#post-form', function(e) {
		e.preventDefault();
		const formData = new FormData(this);
		const postId = $('#post_id').val();
		const url = postId ? `/back/post/edit/${postId}` : '/back/post/new';

		// Validate form before submission
		const type = $('#post_type').val();
		if (!type) {
			alert('Please select a post type');
			return;
		}

		$.ajax({
			url: url,
			type: 'POST',
			data: formData,
			processData: false,
			contentType: false,
			success: function(response) {
				if (response.success) {
					$('#editPostModal').modal('hide');
					location.reload(); // Refresh the page to show updated data
				} else {
					// Handle validation errors
					if (response.errors) {
						Object.keys(response.errors).forEach(field => {
							const errorDiv = $(`#${field}-error`);
							errorDiv.text(response.errors[field]);
							errorDiv.show();
						});
					}
				}
			},
			error: function(xhr, status, error) {
				console.error('Error submitting form:', error);
				alert('An error occurred while submitting the form. Please try again.');
			}
		});
	});
});</script>

    <!-- Flash Messages -->
    {% for type, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ type }} alert-dismissible fade show">
                {{ message }}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {% endfor %}
    {% endfor %}

    <!-- Modal Trigger Buttons -->
    <div class="text-right mt-3">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#newPostModal">
            <i class="material-icons">add</i> Create New Post
        </button>
    </div>

    <!-- New Post Modal -->
    <div class="modal fade" id="newPostModal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Create New Post</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    {{ include('post/_Post.html.twig', {form: create_form}) }}
                </div>
            </div>
        </div>
    </div>

    <!-- Edit Post Modal -->
    {% for post in posts %}
    <div class="modal fade" id="editPostModal{{ post.postId }}" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Post</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    {% if edit_forms[post.postId] is defined %}
                        {{ include('post/_Post.html.twig', {form: edit_forms[post.postId]}) }}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    {% endfor %}

    <!-- Post Table -->
    <div class="material-datatables"style="overflow-x: auto; white-space: nowrap;">
        <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
            <thead>
                <tr>
                    <th>Type</th>
                    <th>Image</th>
                    <th>Content Preview</th>
                    <th>Author</th>
                    <th>Forum</th>
                    <th>Votes</th>
                    <th>Created</th>
                    <th>Status</th>
                    <th>Reports</th>
                    <th class="disabled-sorting text-right">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for post in posts %}
                    <tr>
                        <td>
                            <span class="post-type-badge badge-{{ post.type }}">
                                {{ post.type|capitalize }}
                            </span>
                        </td>
                        <td>
                            {% if post.cheminFichier %}
                                <img src="{{ asset('uploads/' ~ post.cheminFichier) }}" 
                                     alt="Post Image"
                                     class="post-image-thumbnail"
                                     onerror="this.style.display='none'">
                            {% endif %}
                        </td>
                        <td>
                            {% if post.type == 'survey' %}
                                {{ post.surveyQuestion|slice(0, 50) }}...
                            {% elseif post.type == 'announcement' %}
                                {{ post.announcementTitle|slice(0, 50) }}...
                            {% elseif post.type == 'comment' %}
                                {{ post.commentContent|slice(0, 50) }}...
                            {% else %}
                                {{ post.commentContent|slice(0, 50) }}...
                            {% endif %}
                        </td>
                        <td>{{ post.idUser.mail }}</td>
                        <td>{{ post.forumId.name }}</td>
                        <td>{{ post.votes }}</td>
                        <td>{{ post.dateCreation|date('Y-m-d H:i') }}</td>
                        <td>{{ post.status }}</td>
                        <td>{{ post.nbrSignal }}</td>
                        <td class="text-right">
                            <button type="button" class="btn btn-link btn-warning btn-just-icon edit" data-toggle="modal" data-target="#editPostModal{{ post.postId }}">
                                <i class="material-icons">edit</i>
                            </button>
                            <form method="POST" action="{{ path('app_back_post_delete', {'post_id': post.postId}) }}" style="display: inline-block;">
                                <input type="hidden" name="_method" value="DELETE">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.postId) }}">
                                <button type="submit" class="btn btn-link btn-danger btn-just-icon remove" onclick="return confirm('Are you sure you want to delete this post?');">
                                    <i class="material-icons">close</i>
                                </button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="10" class="text-center">No posts found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <!-- jQuery, Popper.js, and Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.min.js"></script>
    
    <script>
        // Auto-open edit modal if edit form is present
        $(document).ready(function() {
            {% if edit_form is defined %}
                $('#editPostModal').modal('show');
            {% endif %}
            
            // Preview image before upload
            $('input[type="file"]').change(function(e) {
                var file = e.target.files[0];
                if (file) {
                    var reader = new FileReader();
                    reader.onload = function(e) {
                        $('.image-preview').remove();
                        $(this).before('<img src="' + e.target.result + '" class="image-preview">');
                    }.bind(this);
                    reader.readAsDataURL(file);
                }
            });
        });
    </script>
{% endblock %}