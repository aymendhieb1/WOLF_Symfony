	<style>
		/* Style général du dropdown */
		.dropdown-menu {
			background-color: var(--theme-color2);
			border: 1px solid var(--theme-color);
			border-radius: 4px;
			padding: 0;
			margin: 0;
			box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
		}

		/* Suppression du style par défaut de la liste */
		.dropdown-menu li {
			list-style: none;
		}

		/* Style de chaque item du menu */
		.dropdown-item {
			display: block;
			padding: 10px 15px;
			color: #ffffff; /* Texte en blanc pour le contraste */
			text-decoration: none;
			transition: background-color 0.3s, color 0.3s;
		}

		/* Effet de survol et focus pour un retour visuel interactif */
		.dropdown-item:hover,
		.dropdown-item:focus {
			background-color: var(--theme-color);
			color: #ffffff;
		}

		/* Optionnel : style pour l'item actif */
		.dropdown-item.active,
		.dropdown-item:active {
			background-color: var(--theme-color);
			color: #ffffff;
		}
	</style>
	<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

	<!-- Script JavaScript pour afficher la confirmation -->
	<script>
		document.addEventListener('DOMContentLoaded', function () {
var logoutLink = document.querySelector('.logout');

logoutLink.addEventListener('click', function (e) { // Empêche le comportement par défaut du lien
e.preventDefault();

// Affiche la boîte de dialogue SweetAlert2
Swal.fire({
title: 'Déconnexion',
text: 'Vous voulez vraiment vous déconnecter ?',
icon: 'warning',
showCancelButton: true,
confirmButtonColor: ' #ff681a',
cancelButtonColor: '#132a3e',
confirmButtonText: 'Oui, déconnectez-moi',
cancelButtonText: 'Annuler'
}).then((result) => {
if (result.isConfirmed) {
window.location.href = logoutLink.getAttribute('href');
}
});
});
});
	</script>
