{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/css/weather-styles.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <h1>Sessions</h1>
        <div class="row">
            {% for session in sessions %}
                <div class="col-md-4 mb-4">
                    <div class="card session-card" data-session-date="{{ session.date|date('Y-m-d') }}">
                        <div class="card-body">
                            <h5 class="card-title">{{ session.activite.nom }}</h5>
                            <p class="card-text">
                                <strong>Date:</strong> {{ session.date ? session.date|date('Y-m-d') : '' }}<br>
                                <strong>Time:</strong> {{ session.heure ? session.heure|date('H:i:s') : '' }}<br>
                                <strong>Capacity:</strong> {{ session.capacite }}<br>
                                <strong>Available Places:</strong> {{ session.nbPlace }}
                            </p>
                            <div class="weather-info">
                                <div class="text-center">
                                    <div class="spinner-border text-primary" role="status">
                                        <span class="sr-only">Loading weather...</span>
                                    </div>
                                </div>
                            </div>
                            <div class="mt-3">
                                <a href="{{ path('app_session_show', {'id': session.id}) }}" class="btn btn-info">View</a>
                                <a href="{{ path('app_session_edit', {'id': session.id}) }}" class="btn btn-warning">Edit</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <p>No sessions found</p>
                </div>
            {% endfor %}
        </div>
        
        <a href="{{ path('app_session_new') }}" class="btn btn-primary">Create New Session</a>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/js/weather-api.js') }}"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize weather for all session cards
            document.querySelectorAll('.session-card').forEach(card => {
                const sessionDate = card.dataset.sessionDate;
                updateSessionCardWeather(card, sessionDate);
            });
        });
    </script>
{% endblock %} 