{% extends 'base1.html.twig' %}

{% block title %}Session Details{% endblock %}

{% block body %}
<div class="wrapper">
    <!-- Sidebar -->
    {{ include('sidebar.html.twig') }}

    <!-- Main Panel -->
    <div id="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Session Details</h3>
                        </div>
                        <div class="card-body">
                            <table class="table">
                                <tbody>
                                    <tr>
                                        <th>ID</th>
                                        <td>{{ session.id }}</td>
                                    </tr>
                                    <tr>
                                        <th>Date</th>
                                        <td>{{ session.date ? session.date|date('Y-m-d') : '' }}</td>
                                    </tr>
                                    <tr>
                                        <th>Time</th>
                                        <td>{{ session.heure ? session.heure|date('H:i') : '' }}</td>
                                    </tr>
                                    <tr>
                                        <th>Activity</th>
                                        <td>{{ session.activite.nom }}</td>
                                    </tr>
                                </tbody>
                            </table>

                            <div class="mt-3">
                                <a href="{{ path('app_session_index') }}" class="btn btn-secondary">Back to List</a>
                                <a href="{{ path('app_session_edit', {'id': session.id}) }}" class="btn btn-primary">Edit</a>
                                <form method="post" action="{{ path('app_session_delete', {'id': session.id}) }}" style="display: inline-block" onsubmit="return confirm('Are you sure you want to delete this session?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ session.id) }}">
                                    <button class="btn btn-danger">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 