{% extends 'base.html.twig' %}

{% block body %}
	<section class="py-5" style="background-color: #f4f7fa;">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-8 col-lg-6">
					<div class="card shadow-lg border-0 rounded-4">
						<div class="card-body p-4">
							<div class="text-center mb-4">
								<img src="{{ asset('assets/img/primary.png') }}" alt="TripToGo Logo" style="width: 80px; height: auto;">
							</div>
							<h3 class="text-center mb-3" style="color: #ff681a;">
								Nouveau mot de passe</h3>
							<p class="text-center text-muted mb-4">Veuillez saisir votre nouveau mot de passe ci-dessous.</p>

							{% for label, messages in app.flashes %}
								{% for message in messages %}
									<div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
										{{ message }}
										<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
									</div>
								{% endfor %}
							{% endfor %}

							<form method="post">
								<div class="form-group mb-3">
									<label for="password" class="form-label">Nouveau mot de passe</label>
									<input type="password" id="password" name="password" class="form-control" placeholder="Entrez votre nouveau mot de passe" required>
								</div>

								<button type="submit" class="vs-btn mask-style1 w-100 style4">
									Réinitialiser le mot de passe
								</button>
							</form>

							<div class="mt-4 text-center">
								<a href="{{ path('app_seconnecter') }}" class="recovery-link mb-2 mb-md-0">
									Retour à la connexion
								</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
