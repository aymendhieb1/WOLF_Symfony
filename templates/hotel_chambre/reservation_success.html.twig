{% extends 'base1.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .success-container {
            max-width: 600px;
            margin: 4rem auto;
            text-align: center;
            padding: 2rem;
            background: white;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .success-icon {
            color: #28a745;
            font-size: 5rem;
            margin-bottom: 2rem;
        }

        .success-title {
            color: #2f4858;
            font-size: 2rem;
            margin-bottom: 1rem;
        }

        .success-message {
            color: #6c757d;
            margin-bottom: 2rem;
        }

        .reservation-details {
            text-align: left;
            background: #f8f9fa;
            padding: 1.5rem;
            border-radius: 10px;
            margin: 2rem 0;
        }

        .detail-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 1rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid #dee2e6;
        }

        .detail-row:last-child {
            border-bottom: none;
            margin-bottom: 0;
            padding-bottom: 0;
        }

        .detail-label {
            color: #6c757d;
            font-weight: 600;
        }

        .detail-value {
            color: #2f4858;
        }

        .back-button {
            display: inline-block;
            background: #ff681a;
            color: white;
            padding: 1rem 2rem;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .back-button:hover {
            background: #e55a0f;
            transform: translateY(-2px);
            color: white;
            text-decoration: none;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="success-container">
        <i class="fas fa-check-circle success-icon"></i>
        <h1 class="success-title">Réservation confirmée !</h1>
        <p class="success-message">
            Votre paiement a été traité avec succès et votre réservation est confirmée.
            Un email de confirmation vous sera envoyé dans quelques instants.
        </p>

        <div class="reservation-details">
            <div class="detail-row">
                <span class="detail-label">Numéro de réservation</span>
                <span class="detail-value">#{{ reservation.id }}</span>
            </div>
            <div class="detail-row">
                <span class="detail-label">Date d'arrivée</span>
                <span class="detail-value">{{ reservation.dateDebut|date('d/m/Y') }}</span>
            </div>
            <div class="detail-row">
                <span class="detail-label">Date de départ</span>
                <span class="detail-value">{{ reservation.dateFin|date('d/m/Y') }}</span>
            </div>
            <div class="detail-row">
                <span class="detail-label">Durée du séjour</span>
                <span class="detail-value">{{ reservation.durationInDays }} nuit(s)</span>
            </div>
            {% if reservation.chambre %}
            <div class="detail-row">
                <span class="detail-label">Type de chambre</span>
                <span class="detail-value">{{ reservation.chambre.type }}</span>
            </div>
            {% endif %}
        </div>

        <a href="{{ path('app_home') }}" class="back-button">
            <i class="fas fa-home me-2"></i>
            Retour à l'accueil
        </a>
    </div>
{% endblock %} 