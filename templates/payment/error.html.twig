{% extends 'base.html.twig' %}

{% block title %}Erreur de paiement{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body text-center">
                        <i class="fas fa-exclamation-circle text-danger" style="font-size: 4rem;"></i>
                        <h1 class="mt-4">Erreur de paiement</h1>
                        <p class="lead">Une erreur est survenue lors du traitement de votre paiement.</p>
                        <p class="text-muted">{{ error_message|default('Veuillez réessayer ultérieurement.') }}</p>
                        <a href="{{ path('app_room_reservation', {'id': room_id|default(0)}) }}" class="btn btn-primary mt-3">
                            <i class="fas fa-arrow-left"></i> Retour à la réservation
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 