{% extends 'base1.html.twig' %}

{% block body %}
    <div class="main-panel">
        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header" style="background-color: #ff681a;">
                                <h4 class="card-title" style="color: white;">Liste des Chambres Disponibles</h4>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table">
                                        <thead class="text-primary">
                                            <tr>
                                                <th>Type</th>
                                                <th>Prix</th>
                                                <th>Disponibilité</th>
                                                <th>Description</th>
                                                <th>Hôtel</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        {% for chambre in chambres %}
                                            <tr>
                                                <td>{{ chambre.type }}</td>
                                                <td>{{ chambre.prix }} DT</td>
                                                <td>{{ chambre.disponibilite }}</td>
                                                <td>{{ chambre.description }}</td>
                                                <td>{{ chambre.hotel.nom }}</td>
                                                <td>
                                                    <a href="{{ path('app_back_chambre_show', {'id': chambre.id}) }}" class="btn btn-sm" style="background-color: #ff681a; color: white;">
                                                        <i class="fas fa-eye"></i> Voir
                                                    </a>
                                                    <a href="{{ path('app_back_chambre_edit', {'id': chambre.id}) }}" class="btn btn-sm" style="background-color: #ff681a; color: white;">
                                                        <i class="fas fa-edit"></i> Modifier
                                                    </a>
                                                </td>
                                            </tr>
                                        {% else %}
                                            <tr>
                                                <td colspan="6">Aucune chambre trouvée</td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

<style>
    .card {
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        border-radius: 10px 10px 0 0;
        padding: 1.5rem;
    }

    .card-title {
        margin: 0;
        font-size: 1.5rem;
        font-weight: 500;
    }

    .table {
        width: 100%;
        margin-bottom: 1rem;
        background-color: transparent;
    }

    .table th {
        font-weight: 500;
        color: #333;
        padding: 1rem;
        border-bottom: 2px solid #dee2e6;
    }

    .table td {
        padding: 1rem;
        vertical-align: middle;
        border-bottom: 1px solid #dee2e6;
    }

    .btn-sm {
        padding: 0.5rem 1rem;
        font-size: 0.875rem;
        border-radius: 5px;
        margin-right: 0.5rem;
        transition: all 0.3s ease;
    }

    .btn-sm:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .table-responsive {
        display: block;
        width: 100%;
        overflow-x: auto;
        -webkit-overflow-scrolling: touch;
    }
</style>
{% endblock %} 