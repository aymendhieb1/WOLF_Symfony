{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <style>
        #pdfModal .modal-body {
            height: 70vh;
            padding: 0;
        }
        #pdfViewer {
            width: 100%;
            height: 100%;
            border: none;
        }
        .download-btn {
            margin: 10px;
        }
        .reservation-buttons {
            margin-top: 20px;
            display: flex;
            gap: 10px;
        }
        .pdf-viewer {
            width: 100%;
            height: 400px;
            border: none;
            margin: 10px 0;
        }
        .reservation-list {
            max-height: 300px;
            overflow-y: auto;
            margin: 15px 0;
        }
        .reservation-item {
            padding: 10px;
            margin: 5px 0;
            border: 1px solid #ddd;
            border-radius: 4px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .reservation-item:hover {
            background-color: #f8f9fa;
        }
        .reservation-details {
            flex-grow: 1;
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/3.4.120/pdf.min.js"></script>
    <script src="{{ asset('js/reservation.js') }}"></script>
{% endblock %}

{% block body %}
<div class="wrapper ">
    <div class="sidebar" data-color="orange" data-background-color="black" data-image="{{ asset('assets/img/sidebar-1.jpg')}}">
        <!-- Sidebar content -->
        <div class="logo">
            <a href="http://www.creative-tim.com/" class="simple-text logo-mini">
                Picture
            </a>
            <a href="http://www.creative-tim.com/" class="simple-text logo-normal">
                Logo
            </a>
        </div>
        <div class="sidebar-wrapper">
            <!-- Your sidebar menu items here -->
        </div>
    </div>
    <div class="main-panel">
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-transparent navbar-absolute fixed-top ">
            <div class="container-fluid">
                <div class="navbar-wrapper">
                    <a class="navbar-brand" href="javascript:;">Détails de l'Activité</a>
                </div>
            </div>
        </nav>
        <!-- End Navbar -->
        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header card-header-primary">
                                <h4 class="card-title">Détails de l'activité</h4>
                            </div>
                            <div class="card-body">
                                <table class="table">
                                    <tbody>
                                        <tr>
                                            <th>Nom</th>
                                            <td>{{ activite.nom }}</td>
                                        </tr>
                                        <tr>
                                            <th>Description</th>
                                            <td>{{ activite.description }}</td>
                                        </tr>
                                        <tr>
                                            <th>Type</th>
                                            <td>{{ activite.type }}</td>
                                        </tr>
                                        <tr>
                                            <th>Prix</th>
                                            <td>{{ activite.prix }}</td>
                                        </tr>
                                    </tbody>
                                </table>
                                <div class="row mt-4">
                                    <div class="col-md-12">
                                        <a href="{{ path('app_activite_edit', {'id': activite.id}) }}" class="btn btn-warning">
                                            <i class="material-icons">edit</i> Modifier
                                        </a>
                                        <a href="{{ path('app_back_activite') }}" class="btn btn-default">
                                            <i class="material-icons">arrow_back</i> Retour
                                        </a>
                                        <div class="reservation-buttons">
                                            <button onclick="makeReservation({{ session.id }})" class="btn btn-success">
                                                <i class="material-icons">event_available</i> Make Reservation
                                            </button>
                                            <button onclick="checkReservations()" class="btn btn-info">
                                                <i class="material-icons">list_alt</i> Check Reservations
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{# Add Modal for PDF Preview #}
<div class="modal fade" id="pdfModal" tabindex="-1" role="dialog" aria-labelledby="pdfModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="pdfModalLabel">Reservation Confirmation</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <iframe id="pdfViewer"></iframe>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="downloadPdf">
                    <i class="material-icons">download</i> Download PDF
                </button>
            </div>
        </div>
    </div>
</div>
{% endblock %} 