{% extends 'base.html.twig' %}

{% block title %}Détails du Vol{% endblock %}

{% block body %}
    <!-- Hero Area Start -->
    <section class="hero-layout" data-bg-src="{{ asset('assets/img/banner/banner-bg-1.png') }}">
        <div class="hero-mask">
            <div class="container">
                <div class="row align-items-center justify-content-between">
                    <div class="col-lg-6">
                        <div class="hero-content">
                            <span class="hero-subtitle">Détails du Vol</span>
                            <h1 class="hero-title">{{ vol.depart }} → {{ vol.destination }}</h1>
                            <p class="hero-text">
                                Consultez tous les détails de votre vol
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Main Content Area -->
    <div class="space">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h3 class="card-title">Informations du Vol</h3>
                        </div>
                        <div class="card-body">
                            <div class="flight-info">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="info-group">
                                            <h4>Départ</h4>
                                            <p><i class="fas fa-map-marker-alt"></i> {{ vol.depart }}</p>
                                            <p><i class="far fa-calendar"></i> {{ vol.heureDepart|date('d/m/Y') }}</p>
                                            <p><i class="far fa-clock"></i> {{ vol.heureDepart|date('H:i') }}</p>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="info-group">
                                            <h4>Arrivée</h4>
                                            <p><i class="fas fa-map-marker-alt"></i> {{ vol.destination }}</p>
                                            <p><i class="far fa-calendar"></i> {{ vol.heureArrivee|date('d/m/Y') }}</p>
                                            <p><i class="far fa-clock"></i> {{ vol.heureArrivee|date('H:i') }}</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mt-4">
                                    <div class="col-12">
                                        <div class="info-group">
                                            <h4>Détails Supplémentaires</h4>
                                            <p><i class="fas fa-plane"></i> Compagnie: {{ vol.compagnie }}</p>
                                            <p><i class="fas fa-tag"></i> Prix: {{ vol.prix }} TND</p>
                                            <p><i class="fas fa-chair"></i> Classe: {{ vol.classeChaise }}</p>
                                            <p><i class="fas fa-chair"></i> Sièges disponibles: {{ vol.siegesDisponibles }}</p>
                                            <p><i class="fas fa-info-circle"></i> Description: {{ vol.description }}</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Carte du Vol</h3>
                        </div>
                        <div class="card-body">
                            <div id="map" style="height: 400px;"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% block weather_section %}{% endblock %}

    <a href="{{ path('app_vol_index') }}" class="btn btn-primary">Retour à la liste</a>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" />
    <style>
        .hero-layout {
            padding: 120px 0;
            background-size: cover;
            background-position: center;
            position: relative;
        }
        .hero-mask {
            background: rgba(0, 0, 0, 0.5);
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
        }
        .hero-content {
            position: relative;
            z-index: 1;
            color: white;
        }
        .hero-subtitle {
