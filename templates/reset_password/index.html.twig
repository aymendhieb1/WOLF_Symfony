{% extends 'base.html.twig' %}

{% block body %}

	<section class="py-5" style="background-color: #f4f7fa;">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6 col-lg-5">
					<div class="card shadow-lg border-0 rounded-4">
						<div class="card-body p-4">
							<h3 class="text-center mb-4" style="color: #ff681a;">
								Mot de passe oublié</h3>

							{% for label, messages in app.flashes %}
								{% for message in messages %}
									<div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
										{{ message }}
										<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
									</div>
								{% endfor %}
							{% endfor %}

							<form method="post">
								<div class="form-group mb-3">
									<label for="email">Adresse e-mail</label>
									<input type="email" id="email" name="email" class="form-control" placeholder="Entrez votre adresse email" required>
								</div>

								<button type="submit" class="vs-btn mask-style1 w-100 style4">
									Envoyer le lien de réinitialisation
								</button>
							</form>

							<div class="mt-4 text-center">
								<a href="{{ path('app_seconnecter') }}" class="recovery-link mb-2 mb-md-0" style="color: #555;">
									Retour à la connexion
								</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

{% endblock %}
