{% extends 'base.html.twig' %}

{% block title %}Chambre index{% endblock %}

{% block body %}
    <h1>Chambre index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Id_Chambre</th>
                <th>Type_Chambre</th>
                <th>Prix_Chambre</th>
                <th>Disponibilite_Chambre</th>
                <th>Description_Chambre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for chambre in chambres %}
            <tr>
                <td>{{ chambre.id }}</td>
                <td>{{ chambre.idChambre }}</td>
                <td>{{ chambre.typeChambre }}</td>
                <td>{{ chambre.prixChambre }}</td>
                <td>{{ chambre.disponibiliteChambre }}</td>
                <td>{{ chambre.descriptionChambre }}</td>
                <td>
                    <a href="{{ path('app_chambre_show', {'id': chambre.id}) }}">show</a>
                    <a href="{{ path('app_chambre_edit', {'id': chambre.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_chambre_new') }}">Create new</a>
{% endblock %}
